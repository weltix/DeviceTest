<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.com.ekka.devicetest">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeviceTest">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TestTouchScreenActivity"
            android:label="@string/test_touch_screen"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".TestComPortActivity"
            android:label="@string/test_com_port"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".TestEthernetActivity"
            android:label="@string/test_ethernet"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>